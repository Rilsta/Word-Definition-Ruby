<% @new_words.each() do |new_word| %>
  <li><%= new_word.name() %></li>
<% end %>


post('/word/:id/definition') do
  @new_word = Word.find(params.fetch("id").to_i())
  description = params.fetch('description')
  definitions = Definition.new(description)
  definitions.save()
  erb(:success)
end

<ul>
  <% @definitions.each() do |new_def| %>
    <li><%= new_def.description() %></li>
  <% end %>
</ul>

<h3>Enter in a Definition</h3>
<form action="/word/<%= SOMETHING.id() %>/definition" method="post">
  <input type="text" name="description" id="description">
  <button type="submit" name="button">Submit</button>
</form>
